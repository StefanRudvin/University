.login-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2= t('login')
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.error_notification
            .panel-body
              = f.input :email, required: true, autofocus: true, label: false, placeholder: t('email'), input_html: { class: 'input-lg' }
              = f.input :password, required: true, label: false, placeholder: t('password'), input_html: { class: 'input-lg' }
              = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              = f.button :submit, t('login'), class: 'btn-lg btn-info btn-block'
              = link_to "Finnish", user_session_fi_path, class: 'btn-lg btn-info btn-block'

